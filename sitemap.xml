---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
        http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">
  
  <!-- 홈페이지 -->
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/</loc>
    <lastmod>{{ site.time | date: '%Y-%m-%d' }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>
  
  <!-- 카테고리 홈 페이지들 -->
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/posts/favorite/</loc>
    <lastmod>{{ site.time | date: '%Y-%m-%d' }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
  </url>
  
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/posts/dev/home/</loc>
    <lastmod>{{ site.time | date: '%Y-%m-%d' }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>0.9</priority>
  </url>
  
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/posts/invest/home/</loc>
    <lastmod>{{ site.time | date: '%Y-%m-%d' }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>0.9</priority>
  </url>
  
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/posts/travel/home/</loc>
    <lastmod>{{ site.time | date: '%Y-%m-%d' }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>0.9</priority>
  </url>
  
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/snippets/home/</loc>
    <lastmod>{{ site.time | date: '%Y-%m-%d' }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
  </url>
  
  <!-- Posts Collection -->
  {% for post in site.posts %}
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}{{ post.url }}</loc>
    <lastmod>{% if post.last_modified_at %}{{ post.last_modified_at | date: '%Y-%m-%d' }}{% else %}{{ post.date | date: '%Y-%m-%d' }}{% endif %}</lastmod>
    <changefreq>{% if post.categories contains 'invest' or post.categories contains 'dev' %}weekly{% else %}monthly{% endif %}</changefreq>
    <priority>{% if post.categories contains 'invest' or post.categories contains 'dev' %}0.8{% else %}0.6{% endif %}</priority>
  </url>
  {% endfor %}
  
  <!-- Snippets Collection -->
  {% for snippet in site.snippets %}
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}{{ snippet.url }}</loc>
    <lastmod>{% if snippet.last_modified_at %}{{ snippet.last_modified_at | date: '%Y-%m-%d' }}{% else %}{{ snippet.date | date: '%Y-%m-%d' }}{% endif %}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endfor %}
  
</urlset>

